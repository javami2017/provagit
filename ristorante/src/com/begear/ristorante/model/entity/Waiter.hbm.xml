<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
 "-//Hibernate/Hibernate Mapping DTD//EN"
 "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="com.begear.ristorante.model.entity.Waiter" table="cameriere">
		<meta attribute="class-description">
			Mapping between persistent class - Waiter with
			MySQL table - cameriere
		</meta>
		<id name="id" column="idcameriere" type="int">
			<generator class="native" />
		</id>
		<property name="name" column="nome" type="string" length="45" />
	</class>
</hibernate-mapping>